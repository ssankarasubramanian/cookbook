<% if obj.errors.any? %>
  <div class="row">
    <div class="alert alert-danger col-md-6 col-md-offset-3">
      <h5><strong>Please correct the following errors:</strong></h5>
      <ul>
        <% obj.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
      
    </div>
  </div>
<% end %>
<div class="row notice_wrapper">
  <div class="col-md-12">
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>">
        <%= message%>
      </div>
    <% end %>
  </div>
</div>



<script type = "text/javascript">
  $('document').ready(function() {
    setTimeout(function(){
      $('.notice_wrapper').fadeOut("slow", function(){
        $(this).remove();
      })
    }, 2000);
   
});
</script>
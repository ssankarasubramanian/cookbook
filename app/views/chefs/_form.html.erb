<%= render 'shared/errors', obj: @chef %>
<div class="row">
  <div class="col-md-4 col-md-offset-4 well">
    <%= form_for @chef do |f| %>
      
      <%= f.label :chefname %>
      <%= f.text_field :chefname %>
      
      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>
      
      <%= button_tag @chef.new_record? ? 'Register' : 'Edit Profile', class: "btn btn-success" %>
      <%= link_to "Cancel", root_path, class:"btn btn-danger" %>
    <% end %>
  </div>
</div>
<%= render 'shared/page_title', title: "Create a new Ingredient" %>

<%= render 'shared/errors', obj: @ingredient %>

<div class="row">
  <div class="col-md-4 col-md-offset-4 well">
    <%= form_for @ingredient do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= button_tag 'Create Ingredient', class: "btn btn-success" %>
      <%= link_to "Cancel", root_path, class:"btn btn-danger" %>
    <% end %>
  </div>
</div>